{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["app/shared/*"],
      "@services/*": ["app/shared/services/*"],
      "@guards/*": ["app/shared/guards/*"],
      "@interfaces/*": ["app/shared/interfaces/*"],
      "@components/*": ["app/shared/components/*"],
      "@directives/*": ["app/shared/directives/*"]
    },
    "module": "es2015",
    "types": []
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
